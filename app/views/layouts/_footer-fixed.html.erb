<ul class="footer-fixed">
  <li>
    <%= link_to posts_path, class: "footer-fixed-icon#{ ' is_active' if current_page?(posts_path)}" do %>
      <i class="fas fa-edit"></i>
    <% end %>
  </li>
  <li>
    <%= link_to search_posts_path, class: "footer-fixed-icon#{ ' is_active' if current_page?(search_posts_path)}" do %>
      <i class="fas fa-search"></i>
    <% end %>
  </li>
  <li>
    <%= link_to ranking_posts_path, class: "footer-fixed-icon#{ ' is_active' if current_page?(ranking_posts_path)}" do %>
      <i class="fas fa-chart-line"></i>
    <% end %>
  </li>
  <li>
    <%= link_to user_path(current_user), class: "footer-fixed-icon footer-fixed-user#{ ' is_active' if current_page?(user_path(current_user))}" do %>
      <span class="footer-fixed-user__inner">
        <%= image_tag current_user.image? ? current_user.image.to_s: 'nophoto.jpg' %>
      </span>
    <% end %>
  </li>
</ul>
