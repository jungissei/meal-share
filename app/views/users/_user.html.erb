<div class="user-card shadow-sm">
  <div class="user-card__body">
    <div class="user-card__header">
      <div class="user-card__image">
        <%= image_tag user.image? ? user.image.to_s: 'nophoto.jpg' %>
      </div>
    </div>
    <div class="user-card__main">
      <div class="user-card__main-row">
        <div class="user-card__count"><%= posts.count %></div>
        <div class="user-card__count-name">投稿</div>
      </div>
      <div class="user-card__main-row">
        <div class="user-card__count"><%= user.followings.count %></div>
        <div class="user-card__count-name">フォロー</div>
      </div>
      <div class="user-card__main-row">
        <div class="user-card__count"><%= user.followers.count %></div>
        <div class="user-card__count-name">フォロワー</div>
      </div>
    </div>
    <div class="user-card__footer">
      <% if user_signed_in? && current_user != user %>
        <div class="user-card__follow user-follow">
          <%= render partial: 'relationships/follow', locals: { user: user, relationship: relationship } %>
        </div>
      <% end %>
      <div class="user-card__username"><%= user.name %></div>
    </div>
  </div>
</div>
