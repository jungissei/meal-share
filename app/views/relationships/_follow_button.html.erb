<% if current_user.following?(user) %>
  <%= link_to 'フォロー中', user_relationship_path(user, relationship), method: :delete, class:'user-follow__cancel', remote: true %>
<% else %>
  <%= link_to 'フォロー', user_relationships_path(user), method: :post, class:'user-follow__enable', remote: true %>
<% end %>
