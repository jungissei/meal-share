<div class="post-card shadow-sm">
  <div class="post-card__header">
    <div class="post-card-user">
      <div class="post-card-user__left">
        <%= link_to user_path(post.user), class: 'post-card-user__img' do %>
          <%= image_tag post.user.image? ? post.user.image.to_s: 'nophoto.jpg' %>
        <% end %>
      </div>
      <div class="post-card-user__right">
        <%= link_to user_path(post.user), class: 'post-card-user__name' do %>
          @<%= post.user.username %>
        <% end %>
        <div class="post-card-user__date"><%= l post.created_at, format: :short %></div>
      </div>
    </div>
  </div>
  <%= link_to post, class: 'post-card__body' do %>
    <div class="post-card__title">
      <%= '非公開:' if post.status_private? %>
      <%= post.title %>
    </div>
    <div class="post-card__img">
      <%= image_tag post.image.to_s %>
    </div>
    <div class="post-card__content">
      <%= post.content %>
    </div>
  <% end %>
  <div class="post-card__footer">
    <div class="post-card__acts">
      <% if user_signed_in? %>
        <div class="post-card__act">
          <%= render partial: 'likes/like', locals: { post: post } %>
        </div>
      <% end %>
      <div class="post-card__act">
        <%= link_to "https://twitter.com/share?ref_src=twsrc%5Etfw&url=#{url_for(protocol: ENV['WEB_PROTOCOL'], host: ENV['WEB_HOST'])}&text=#{post.title}&hashtags=MealShare", target:'_blank' do %>
          <i class="fab fa-twitter"></i> Tweet
        <% end %>
      </div>
    </div>
  </div>
</div>
