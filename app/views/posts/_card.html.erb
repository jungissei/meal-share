<div class="col">
  <div class="card shadow-sm">
    <div class="bd-placeholder-img card-img-top">
      <% if post.image.to_s.empty? %>
        <%= image_tag 'nophoto.jpg' %>
      <% else %>
        <%= image_tag post.image.to_s %>
      <% end %>
    </div>
    <div class="card-body">
      <%= render 'cats/post-cats', post:post %>

      <div class="card-title">
        <%= post.title %>
      </div>
      <div class="text-right">
        <div class="btn-group">
          <%= link_to '詳しく見る', post, class: 'btn btn-sm btn-outline-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>