<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>
          【カテゴリ】：
          <% post.cat_ids.each do |cat_id| %>
            <% @cats.each do |cat| %>
              <% if cat_id == cat.id %>
                <span class="ml-3"><%= cat.name %><span>
              <% end %>
            <% end %>
          <% end %>

        </td>
        <td><%= image_tag post.image.to_s %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>
<br>

<%= link_to 'New Post', new_post_path %>
