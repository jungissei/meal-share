<% if user_signed_in? %>
  <%= render partial: 'layouts/sidebar-left' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mr-auto  ml-auto">
      <% @posts.each do |post| %>
        <%= render 'posts/post-card', post: post %>
      <% end %>
      <%= paginate @posts %>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render partial: 'layouts/sidebar-right' %>
<% end %>
