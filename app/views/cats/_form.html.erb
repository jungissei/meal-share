<%= form_with(model: cat, local: true) do |form| %>
  <% if cat.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2 class="alert-heading"><%= pluralize(cat.errors.count, "件のエラー") %>により保存されませんでした。</h2>
      <ul>
        <% cat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, class:'form-control', placeholder:'カテゴリ名を入力してください' %>
  </div>

  <div class="text-center">
    <%= form.submit('更新', class:'btn btn-dark w-100') %>
  </div>

<% end %>