<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6 m-auto">
      <h2 class="title-secondary">ユーザー情報編集</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-file custom-file mb-3">
          <%= f.file_field :image, class:'form-file-input custom-file-input' %>
          <%= f.hidden_field :image_cache %>
          <%= f.label :image, class:'form-file-label custom-file-label' do %>
            <span class="form-file-text">画像を選択</span>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :username, class:'sr-only' %>
          <%= f.text_field :username, class:'form-control', placeholder:'ユーザーID' %>
        </div>

        <div class="field">
          <%= f.label :email, class:'sr-only' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control', placeholder:'Eメールアドレス' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class:'sr-only' %> <i>(変更を希望されない場合、空白にしてください。)</i>
          <%= f.password_field :password, autocomplete: 'new-password', class:'form-control', placeholder:'新しいパスワード' %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> 文字以上</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:'sr-only' %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class:'form-control', placeholder:'確認用パスワード' %>
        </div>

        <div class="field">
          <%= f.label :current_password, class:'sr-only' %> <i>(現在のパスワードを入力してください。)</i>
          <%= f.password_field :current_password, autocomplete: 'current-password', class:'form-control', placeholder:'現在のパスワード' %>
        </div>

        <div class="actions">
          <%= f.submit '更新', class:'btn btn-lg btn-primary btn-block' %>
        </div>
      <% end %>

      <h2 class="title-secondary">退会</h2>

      <div class="mb-3"><%= button_to '退会する', registration_path(resource_name), data: { confirm: '本当に良いですか?' }, method: :delete, class:'btn btn-lg btn-secondary btn-block' %></div>
      <div class="mb-3"><%= link_to '戻る', :back, class:'btn btn-lg btn-secondary btn-block' %></div>
    </div>
  </div>
</div>