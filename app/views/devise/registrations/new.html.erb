<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'form-signin'}) do |f| %>
    <h1 class="title-primary">会員登録</h1>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class="field">
      <%= f.label :username, class:'sr-only' %>
      <%= f.text_field :username, class:'form-control', placeholder:'ユーザーID' %>
    </div>

    <div class="field">
      <%= f.label :email, class:'sr-only' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control', placeholder:'メールアドレス' %>
    </div>

    <div class="form-file custom-file mb-3">
      <%= f.file_field :image, class:'form-file-input custom-file-input' %>
      <%= f.hidden_field :image_cache %>
      <%= f.label :image, class:'form-file-label custom-file-label' do %>
        <span class="form-file-text">画像を選択</span>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :name, class:'sr-only' %>
      <%= f.text_field :name, class:'form-control', placeholder:'ハンドルネーム' %>
    </div>

    <div class="field">
      <%= f.label :password, class:'sr-only' %>
      <% if @minimum_password_length %>
        <div class="text-left"><small>パスワードの長さは<%= @minimum_password_length %>文字以上で、大文字、小文字、数字、特殊文字がそれぞれ1つずつ含まれている必要があります。</small></div>
      <% end %>
      <%= f.password_field :password, autocomplete: 'new-password', class:'form-control', placeholder:'パスワード' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class:'form-control', placeholder:'確認用パスワード' %>
    </div>

    <div class="actions">
      <%= f.submit '登録', class:'btn btn-lg btn-primary btn-block' %>
    </div>
    <div class="mt-5">
      <%= render 'devise/shared/links' %>
    </div>
  <% end %>
</div>