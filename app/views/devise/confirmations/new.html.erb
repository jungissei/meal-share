<div class="container">
  <%= form_with model: @user, url: user_confirmation_path, id:'new_user', class:'form-signin', method: :post, local: true do |f| %>
    <h1 class="title-primary">確認メール再送信</h1>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class="field">
      <%= f.label :email, class:'sr-only' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class:'form-control', placeholder:'Eメールアドレス' %>
    </div>

    <div class="actions">
      <%= f.submit '送信', class:'btn btn-lg btn-primary btn-block' %>
    </div>
    <%= render 'devise/shared/links' %>
  <% end %>
</div>