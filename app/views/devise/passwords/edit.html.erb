<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:'form-signin' }) do |f| %>
    <h1 class="title-primary">パスワード設定</h1>

    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, '新しいパスワード', class:'sr-only' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class:'form-control', placeholder:'新しいパスワード' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, '確認用パスワード' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class:'form-control', placeholder:'確認用パスワード' %>
    </div>

    <div class="actions">
      <%= f.submit '登録', class:'btn btn-lg btn-primary btn-block' %>
    </div>

    <%= render 'devise/shared/links' %>
  <% end %>
</div>