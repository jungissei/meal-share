<div class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form-signin' }) do |f| %>
  <h1 class="title-primary">パスワード再発行</h1>

  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="field">
    <%= f.label :email, class:'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control', placeholder:'Eメールアドレス' %>
  </div>

  <div class="actions">
    <%= f.submit '送信', class:'btn btn-lg btn-primary btn-block' %>
  </div>

  <%= render 'devise/shared/links' %>
<% end %>
</div>